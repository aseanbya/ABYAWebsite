generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Blog {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    String
  summary   String?  @db.Text
  content   String?  @db.Text
  image     String?  @db.Text
  title     String   @unique
  views     Int      @default(0)
  tags      Tag[]

  @@index([title])
}

model Tag {
  id   String @id @default(cuid())
  tag  TagTag
  post Blog[]
}

enum TagTag {
  EXPERIENCES
  PR_ANNOUNCEMENT
  A_FUTURE_IN_ASEAN_SERIES
  ABYA_EXPLORE
  ABYA_LEAPS
}

enum TeamLevel {
  MANAGEMENT
  ADVISORYBOARD
  EXECUTIVES
}

model Team {
  id       String    @id @default(cuid())
  name     String    @db.Text
  position String    @db.Text
  level    TeamLevel
  image    String    @db.Text
}

model Testimonial {
  id       String @id @default(cuid())
  name     String @db.Text
  position String @db.Text
  quote    String @db.Text
}

model HearFromOurCommunity {
  id       String @id @default(cuid())
  name     String @db.Text
  position String @db.Text
  quote    String @db.Text
}
